<div class="container text-center">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @customer.name %>さんの会員詳細</h2>
    </div>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: :true, method: :put do |f| %>
    <div class="row">
      <div class="col-4"><%= f.label "ニックネーム" %></div>
      <div class="col-4"><%= f.text_field :name, :size => "25", placeholder: "花子" %></div>
    </div>

    <div class="row">
      <div class="col-4"><%= f.label "メールアドレス" %></div>
      <div class="col-4"><%= f.email_field :email, :size => "25", placeholder: "sample@example.com" %></div>
    </div>

    <div class="row">
      <div class="col-3 offset-md-1"><%= f.label "会員ステータス" %></div>
      <div class="col-3"><%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "退会" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-lg-6 px-sm-0 offset-sm-1">
        <%= f.submit "変更を保存", class:"btn btn-success my-4" %>
      </div>
    </div>
  <% end %>
</div>