<div class="container">
  <div class="row">
    <div vlass="col-md-4">
      <h2>管理者ログイン</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-md-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :パスワード %>
    </div>
    <div class="col-md-2">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
  <% if devise_mapping.rememberable? %>
    <div class="col-md-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.submit "ログイン", class:"btn btn-primary mt-3" %>
    </div>
      <% end %>
  </div>

  <%= render "admin/shared/links" %>


</div>