<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-3"><%= f.label :ニックネーム %></div>
    <div class="col-md-3"><%= f.text_field :name, :size => "20", autofocus: true %></div>
  </div>

  <div class="row">
    <div class="col-md-3"><%= f.label :メールアドレス %></div>
    <div class="col-md-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row">
    <div class="col-md-3"><%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </div>
    <div class="col-md-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>

  <div class="row">
    <div class="col-md-3"><%= f.label :パスワード（確認用） %></div>
    <div class="col-md-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-5"><%= render "public/shared/links" %></div>
  </div>
</div>
