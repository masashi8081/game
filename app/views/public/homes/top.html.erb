<div class="container">
  <div class="row">
    <div class="col-xs-12 mx-auto">
      <%= image_tag '/assets/gamenet.home.jpg', :size =>'100%' %>

    </div>
  </div>
</div>

<h1>製品名を入力して検索</h1>
<div class="search-box">
    <%= form_with url: games_path, method: :get, local: true do |f| %>
    <div class="form-group">
        <%= f.text_field :keyword, value: params[:keyword], class: "form-control" %>
        <%= f.submit '製品名を検索', class: "form-control btn btn-success" %>
    </div>
    <% end %>
<% if @games.present? %>
  <%= render 'games/game' %>
<% end %>
</div>
<div class="container new-review">
  <h2>新着レビュー</h2>

  <div class="all-items-show-button"><%= link_to "全てのレビューをみる", reviews_path %></div>
 </div>