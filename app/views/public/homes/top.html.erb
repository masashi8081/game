<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <%= image_tag '/assets/gamenet.home.jpg', :size =>'100%' %>
    </div>
    <div class="col-md-12 text-center">
      <h4>>><%= link_to "レビューする", games_search_path %><<</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>新着レビュー</h2>
    </div>
    <div class="row">
      <% @reviews.first(4).each do |review| %>
        <div class="col-md-1">
          <%= image_tag review.game.mediumImageUrl %>
        </div>
        <div class="col-md-2">
          <%= link_to game_path(review.game) do %>
            <p><%= review.game.title %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
   <div>
      <div class="all-items-show-button"><%= link_to "全てのレビューをみる", reviews_path %></div>
  </div>
</div>